<Window x:Class="MVVM.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MVVM"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <TextBox HorizontalAlignment="Left" Margin="323,130,0,0" TextWrapping="Wrap" Text="{Binding Login}" VerticalAlignment="Top" Width="184" Height="30"/>
        <TextBox HorizontalAlignment="Left" Margin="323,187,0,0" TextWrapping="Wrap" Text="{Binding Password}" VerticalAlignment="Top" Width="184" Height="30"/>
        <Button Content="Button" HorizontalAlignment="Left" Command="{Binding LoginCommand}" Margin="323,266,0,0" VerticalAlignment="Top" Height="36" Width="182"/>

    </Grid>
</Window>
